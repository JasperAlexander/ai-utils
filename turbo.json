{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_API_BASE", 
    "OPENAI_API_KEY",
    "MONGODB_URI",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_GITHUB_ID",
    "NEXTAUTH_GITHUB_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {}
  }
}
